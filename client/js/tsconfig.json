{
  "compilerOptions": {
    "target": "ES2017",                          // Reasonable output target
    "module": "ESNext",                          // Modern modules
    "rootDir": "./src",                          // Where your source code lives
    "outDir": "./dist",                          // Where compiled files go
    "declaration": true,                         // So consumers get proper types
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
